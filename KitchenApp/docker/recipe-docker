FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build-env
WORKDIR /app

# Copy csproj and restore as distinct layers
COPY RecipeService/*.csproj ./RecipeService/
COPY KitchenLib/*.csproj ./KitchenLib/

WORKDIR /app/RecipeService
RUN dotnet restore
WORKDIR /app/KitchenLib
RUN dotnet restore

WORKDIR /app

# Copy everything else and build
COPY RecipeService/ ./RecipeService/
COPY KitchenLib/ ./KitchenLib/

WORKDIR /app/RecipeService
RUN dotnet nuget locals all -c
RUN dotnet publish -o out

# Build runtime image
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1
COPY --from=build-env /app/RecipeService/out .
ENTRYPOINT ["dotnet", "RecipeService.dll"]
